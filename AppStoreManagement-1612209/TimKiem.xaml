<Window x:Class="AppStoreManagement_1612209.TimKiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppStoreManagement_1612209"
        mc:Ignorable="d"
        Title="Tìm kiếm" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label Name="lblTitle"  Content="CHỨC NĂNG TÌM KIẾM" Height="40" Width="600" FontSize="23" FontWeight="Bold"
               HorizontalContentAlignment="Center" Canvas.Left="200" Canvas.Top="30" Foreground="Blue">
        </Label>
        <Label Name="lbl1"  Content="Bạn muốn tìm gì?" Height="40" Width="600" FontSize="20"
               HorizontalContentAlignment="Center" Canvas.Left="200" Canvas.Top="80" Foreground="Gray" FontStyle="Italic">
        </Label>

        <CheckBox Name="cbName" Height="20" Width="20" Canvas.Left="150" Canvas.Top="192" IsChecked="False" Checked="cbName_Checked" Unchecked="cbName_Unchecked"></CheckBox>
        <Label Name="lblName"  Content="Theo tên" Height="40" Width="150" FontSize="20"
               HorizontalContentAlignment="Left" Canvas.Left="180" Canvas.Top="180" Foreground="Black">
        </Label>
        <TextBox Name="txtName" Height="30" Width="350" Background="White"  Foreground="Black" FontSize="20"
                 HorizontalContentAlignment="Left" Canvas.Left="350" Canvas.Top="185" GotFocus="TxtName_GotFocus">
        </TextBox>
        <CheckBox Name="cbType" Height="20" Width="20" Canvas.Left="150" Canvas.Top="242" IsChecked="False" Checked="cbType_Checked" Unchecked="cbType_Unchecked"></CheckBox>
        <Label Name="lblType"  Content="Theo loại" Height="40" Width="150" FontSize="20"
               HorizontalContentAlignment="Left" Canvas.Left="180" Canvas.Top="230" Foreground="Black">
        </Label>
        <TextBox Name="txtType" Height="30" Width="350" Background="White"  Foreground="Black" FontSize="20"
                 HorizontalContentAlignment="Left" Canvas.Left="350" Canvas.Top="235" GotFocus="TxtType_GotFocus">
        </TextBox>
        <ComboBox Name="itemCombo" Height="25" Width="150" Canvas.Left="720" Canvas.Top="235" SelectionChanged="ItemCombo_SelectionChanged" Loaded="ItemCombo_Loaded">
        </ComboBox>

        <Button Name="btnSearch" Height="40" Width="100" FontSize="20" Foreground="Red" FontWeight="Bold"
                Canvas.Left="300" Canvas.Top="350" Click="btnSearch_Click">_Tìm kiếm</Button>
        <Button Name="btnCancel" Height="40" Width="100" FontSize="20" Foreground="Red" FontWeight="Bold"
                Canvas.Left="520" Canvas.Top="350" Click="BtnCancel_Click">_Hủy bỏ</Button>
    </Canvas>
</Window>
